@model Profolio_ASP.NET_MVC.Models.AboutMe

@{
    ViewData["Title"] = "Contact Me";
}

<div class="container-fluid justify-content-center">
    <div class="justify-content-center" style="height: 89vh;">
        <h1>Contact me:</h1>
        <div class="contact-me" style="padding-left: 1vh;">
            <form asp-action="Create" class="gap-3 d-grid">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="col gap-2 d-flex w-100">
                    <div class="row inputForm" style="margin: 0 !important; width: 50%;">
                        <label class="control-label">Your name</label>
                        <input asp-for="AboutMeParagraph" class="form-control" style="width: 100%;" autocomplete="off"/>
                        <span asp-validation-for="AboutMeParagraph" class="text-danger"></span>
                    </div>
                    <div class="row inputForm" style="margin: 0 !important; width: 50%;">
                        <label class="control-label">Subject</label>
                        <input asp-for="PersonalImage" class="form-control" style="width: 100%;" autocomplete="off" />
                        <span asp-validation-for="PersonalImage" class="text-danger"></span>
                    </div>
                </div>
                <div class="row inputForm" style="margin: 0 !important;">
                    <label class="control-label">Message</label>
                    <textarea asp-for="CV" class="form-control" id="description-input" style="max-width: 100%; height: 30vh; border-radius: 0.3% !important; max-height: 60vh;" autocomplete="off"></textarea>
                    <span asp-validation-for="CV" class="text-danger"></span>
                </div>
                <div>
                    <input class="submit-input" type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
